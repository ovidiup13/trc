{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"e2e": {
			"cache": false,
			"dependsOn": ["e2e:prep"]
		},
		"e2e:prep": {
			"cache": false,
			"inputs": [
				"apps/**",
				"examples/**",
				"packages/**",
				"package.json",
				"bun.lock",
				"packages/e2e/docker/**",
				"packages/e2e/package.json"
			],
			"outputs": []
		}
	},
	"remoteCache": {
		"enabled": true,
		"apiUrl": "http://localhost:3003",
		"teamId": "team_ovidiup13",
		"teamSlug": "trc"
	}
}
