{
  "name": "@trc/workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "openapi:generate": "openapi-typescript docs/turbo-remote-cache-openapi.json -o packages/shared/src/openapi.ts",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "build": "turbo run build",
    "validate": "turbo run typecheck lint format test"
  },
  "packageManager": "bun@1.3.6",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "bun-types": "^1.3.6",
    "openapi-typescript": "^7.10.1",
    "trc": "workspace:*",
    "turbo": "^2.3.0",
    "typescript": "^5.8.0",
    "vitest": "^2.1.9",
    "wrangler": "^4.61.1"
  }
}
